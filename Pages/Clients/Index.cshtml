@page
@model Crud_store.Pages.Clients.IndexModel
@{
}

<br />
<div class="container d-flex flex-row-reverse">
    <a class="btn btn-success btn-lg my-5 px-5" href="Clients/Create">Add New Clients</a>
</div>

@if (Model.error_msg.Length > 0)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <strong>Error in db</strong> @Model.error_msg
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<h2>List of clients</h2>
@*<h2>@{Model.connectionString}</h2>*@
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Address</th>
            <th>Create At</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var items in Model.listClients)
        {
            <tr>
                <td>@items.id</td>
                <td>@items.name</td>
                <td>@items.phone</td>
                <td>@items.phone</td>
                <td>@items.address</td>
                <td>@items.created_at</td>
                <td>
                    <a class="btn btn-warning btn-sm" href="/Clients/Edit?id=@items.id">Edit</a>
                    <a class="btn btn-danger btn-sm" href="/Clients/Delete?id=@items.id">Delete</a>
                </td>
            </tr>
        }

    </tbody>
</table>
